
	<div class="row">
{{#each model.posts as |post|}}
	<div class="col-md-4">
	{{post-edit post=post authors=model.authors}}
	
	</div>
{{/each}}
	</div>

	<div class="row">
		<div class="col-md-4">
			<form>
				<div class="form-group row"><label class="col-sm-12"><h2>Add New Post:</h2></label></div>
				<div class="form-group row">
					<label class="col-sm-3 form-control-label">Title: </label>
					<div class="col-sm-9">{{input value=postTitle}}</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-3 form-control-label">Content: </label>
					<div class="col-sm-9">{{input value=postContent}}</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-3 form-control-label">Author: </label>
					<div class="col-sm-9"><select onchange={{action (mut selectAuthor) value="target.value"}} >
			  {{#each model.authors as |authorChoice|}}
			    <option value={{authorChoice.id}} selected={{eq selectAuthor authorChoice.id}}>{{authorChoice.firstName}} {{authorChoice.lastName}}</option>
			  {{/each}}
			</select></div>
				</div>
				<div class="form-group row">
    				<div class="col-sm-3"><button {{action "addPost"}} class="btn btn-info">Add</button>
    				</div>
    			</div>
			</form>
		</div>
	</div>

